depends popt
depends openssh
depends zlib

optional_depends attr \
                 "--enable-xattr-support" \
                 "--disable-xattr-support" \
                 "for extended attribute (attr) support"

optional_depends acl \
                 "--enable-acl-support" \
                 "--disable-acl-support" \
                 "for access control list (acl) support"

optional_depends xxhash "" "--disable-xxhash" "for xxhash checksum support"

optional_depends zstd "" "--disable-zstd" "for zstd compress format support"

optional_depends lz4 "" "--disable-lz4" "for lz4 compress format support"
