depends readline
depends cmake

optional_depends alsa-utils "-Denable-alsa=ON"       "-Denable-alsa=OFF"       "for alsa audio support"
optional_depends pulseaudio "-Denable-pulseaudio=ON" "-Denable-pulseaudio=OFF" "for pulseaudio support"
optional_depends pipewire   "-Denable-pipewire=ON"   "-Denable-pipewire=OFF"   "for pipewire support"
optional_depends jack2      "-Denable-jack=ON"       "-Denable-jack=OFF"       "For jack audio support"
optional_depends ladspa_sdk "-Denable-ladspa=ON"     "-Denable-ladspa=OFF"     "audio API support"
optional_depends libsndfile "-Denable-libsndfile=ON" "-Denable-libsndfile=OFF" "for libsndfile support"
optional_depends SDL3       "-Denable-sdl3=ON"       "-Denable-sdl3=OFF"       "for SDL3 audio support"
