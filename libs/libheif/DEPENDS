depends cmake
depends x265
depends libpng
depends libde265
depends rav1e
depends SVT-AV1
depends dav1d

optional_depends openjpeg-2 "-DWITH_OpenJPEG_DECODER=ON" "-DWITH_OpenJPEG_DECODER=OFF" "for JPEG 2000 codec support"
optional_depends %JPEG \
                 "-DWITH_JPEG_DECODER=ON -DWITH_JPEG_ENCODER=ON" \
                 "-DWITH_JPEG_DECODER=OFF-DWITH_JPEG_ENCODER=OFF" \
                 "for jpeg encoding and decoding support"
