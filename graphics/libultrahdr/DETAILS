          MODULE=libultrahdr 
         VERSION=1.4.0
          SOURCE=$MODULE-$VERSION.tar.gz
 SOURCE_URL_FULL=https://github.com/google/libultrahdr/archive/refs/tags/v$VERSION.tar.gz
      SOURCE_VFY=sha256:e7e1252e2c44d8ed6b99ee0f67a3caf2d8a61c43834b13b1c3cd485574c03ab9
